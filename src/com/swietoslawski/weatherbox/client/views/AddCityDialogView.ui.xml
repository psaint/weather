<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:VerticalPanel styleName="add-city-dialog" horizontalAlignment="ALIGN_CENTER" width="100%" height="100%">
		<g:FlowPanel>
			<g:TextBox ui:field="city_text"></g:TextBox>
			<g:Button ui:field="cancel_button">X</g:Button>
		</g:FlowPanel>
		<g:ListBox ui:field="cities_list"></g:ListBox>
		<g:Label ui:field="message"></g:Label>
	</g:VerticalPanel>
</ui:UiBinder>
