<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_MIDDLE">
			<g:Image ui:field="icon"/>
			<g:Label text="Weekday" ui:field="weekday" horizontalAlignment="ALIGN_LEFT"/>
			<g:Label text="Hi" ui:field="temp_h" horizontalAlignment="ALIGN_LEFT"/>
			<g:Label text="Lo" ui:field="temp_l" horizontalAlignment="ALIGN_RIGHT"/>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder>
